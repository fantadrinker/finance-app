{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2019"
    ]
  },
  "include": [
    "./src/**/*",
    "./declaration.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
